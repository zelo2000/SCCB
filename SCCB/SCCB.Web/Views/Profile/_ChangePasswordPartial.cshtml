@model SCCB.Web.Models.ChangePasswordModel

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Зміна паролю</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-danger">&times;</span>
                </button>
            </div>

            @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post))
            {
                <div class="modal-body">
                    <label asp-for="OldPassword" class="ml-2">Введіть старий пароль</label>
                    <div>
                        <input asp-for="OldPassword" class="pl-3 py-1 border w-100" />
                        <span asp-validation-for="OldPassword" class="field-validation-error">
                            @{if (ViewBag.Error != null)
                                    @ViewBag.Error
                            }
                        </span>
                        <p class="show_pass"> Показати пароль <input type="checkbox" /></p>
                    </div>
                    <label asp-for="NewPassword" class="ml-2">Введіть новий пароль</label>
                    <div>
                        <input asp-for="NewPassword" class="pl-3 py-1 border w-100" />
                        <span asp-validation-for="NewPassword" class="field-validation-error"></span>
                        <p class="show_pass"> Показати пароль <input type="checkbox" /></p>
                    </div>
                    <label asp-for="NewPasswordRepeat" class="ml-2">Підтвердіть новий пароль</label>
                    <div>
                        <input asp-for="NewPasswordRepeat" class="pl-3 py-1 border w-100" />
                        <span asp-validation-for="NewPasswordRepeat" class="field-validation-error"></span>
                        <p class="show_pass"> Показати пароль <input type="checkbox" /></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="green-bg hover-erase px-3 py-1">
                        Зберегти зміни
                    </button>
                </div>
            }
        </div>
    </div>
</div>

