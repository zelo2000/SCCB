@section Styles {
    <link href="@Url.Content("~/css/scheduleEditing.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/bookingApprove.css")" rel="stylesheet" type="text/css" />
}

@{
    ViewData["Title"] = "Booking approval";
}

@section Header {
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark pb-3">
        <div class="container-fluid ml-4 mr-4">
            <a class="nav-link text-white nav-header pr-sm-3 main-link" asp-area="" asp-controller="Home" asp-action="Index">Планувальник</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <div class="animated-navbar-toggler-icon"><span></span><span></span><span></span><span></span></div>
            </button>
            <div class="navbar-collapse collapse justify-content-between flex-sm-row">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white px-sm-3" asp-area="" asp-controller="Booking" asp-action="Create">Бронювання аудиторій</a>
                    </li>
                </ul>
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item">
                        <a class="img-link pr-sm-3" asp-area="" asp-controller="Admin" asp-action="Index">
                            <img src="~/img/avatar.png" alt="Profile" width="50" class="active" />
                        </a>
                        <a class="nav-link active link-mobile text-white pr-sm-3" asp-area="" asp-controller="Admin" asp-action="Index">Профіль</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white pl-sm-3" asp-area="" asp-controller="Authentication" asp-action="LogOut">Вихід</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="info-block d-flex align-items-center justify-content-center pb-5">
        <div class="text-center py-4">
            <h2 class="mb-3">Підтвердження бронювання</h2>
        </div>
    </div>
}

<div class="main-content py-5 d-flex justify-content-center">
    <div class="schedule-filter-container mx-lg-3 mx-0">
        <div class="d-flex flex-row mx-lg-0 mx-3">
            <div class="filter-label mr-4 py-2 px-4">
                <span>Фільтри</span>
            </div>
            <button class="clear-all py-2 px-3">Очистити все</button>
        </div>

        <div class="approval-container w-100 mt-5 py-5 px-5">
            <div class="row d-flex flex-column flex-md-row justify-content-center align-items-center mb-4">
                <form class="col-4">
                    <select class="w-100 selectpicker " data-live-search="true" onchange="this.form.submit()" data-style="filter-btn py-2 px-4">
                        <option disabled selected>--Оберіть дату--</option>
                    </select>
                </form>
                <form class="col-4">
                    <select class="w-100 selectpicker " data-live-search="true" onchange="this.form.submit()" data-style="filter-btn py-2 px-4">
                        <option disabled selected>--Оберіть номер пари--</option>
                    </select>
                </form>
                <form class="col-4">
                    <select class="w-100 selectpicker" data-live-search="true" onchange="this.form.submit()" data-style="filter-btn py-2 px-4">
                        <option disabled selected>--Оберіть аудиторію--</option>
                    </select>
                </form>
            </div>


            <div class="schedule-bg pt-1">
                <div class="approval-block mx-4 my-4 px-4 py-4">
                    <div class="items-block px-2 py-2 mb-2 font-weight-bold d-flex flex-column flex-md-row">
                        <div class="col-4-sm">
                            <span class="mr-4">6 пара</span>
                        </div>
                        <div class="col-4-sm">
                            <span class="mr-4">ауд. 439</span>
                        </div>
                        <div class="col-4-sm">
                            <span>16:10 - 18:00</span>
                        </div>
                    </div>
                    <div class="font-weight-bold d-flex flex-column flex-md-row">
                        <div class="col-8 comment-block text-white font-weight-bold mb-0 ml-0">
                            <p>Додайте коментар</p>
                        </div>

                        <div class="col-4 text-center text-sm-right font-weight-bold ">
                            <button class="approve-btn mx-2 my-2 px-2 py-1 text-white font-weight-bold btn-lg">
                                Підтвердити
                            </button>
                            <button class="reject-btn mx-2 my-2 px-2 py-1 text-white font-weight-bold btn-lg">
                                Відхилити
                            </button>
                        </div>
                    </div>

                </div>


                <div class="approval-block mx-4 my-4 px-4 py-4">
                    <div class="items-block px-2 py-2 mb-2 font-weight-bold d-flex flex-column flex-md-row">
                        <div class="col-4-sm">
                            <span class="mr-4">6 пара</span>
                        </div>
                        <div class="col-4-sm">
                            <span class="mr-4">ауд. 439</span>
                        </div>
                        <div class="col-4-sm">
                            <span>16:10 - 18:00</span>
                        </div>
                    </div>
                    <div class="font-weight-bold d-flex flex-column flex-md-row">
                        <div class="col-8 comment-block text-white font-weight-bold mb-0 ml-0">
                            <p>Додайте коментар</p>
                        </div>

                        <div class="col-4 text-center text-sm-right font-weight-bold ">
                            <button class="approve-btn mx-2 my-2 px-2 py-1 text-white font-weight-bold btn-lg">
                                Підтвердити
                            </button>
                            <button class="reject-btn mx-2 my-2 px-2 py-1 text-white font-weight-bold btn-lg">
                                Відхилити
                            </button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
