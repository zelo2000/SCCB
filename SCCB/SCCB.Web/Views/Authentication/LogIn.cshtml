@model SCCB.Web.Models.LogInModel

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

@{
    ViewData["Title"] = "Login";
}

<div class="login-form mt-5 mb-5 pt-5">
    <h2>Залогіньтесь, щоб продовжити</h2>

    <form asp-action="LogIn" method="post" class="mt-5 mb-5">
        <div asp-validation-summary="All"></div>
        <div class="form_stuff">
            <div class="d-flex flex-column">
                <label asp-for="Email" class="ml-2">Емейл</label>
                <input asp-for="Email" class="pl-3" />
            </div>
            <div class="d-flex flex-column mt-3">
                <label asp-for="Password" class="ml-2">Пароль</label>
                <input asp-for="Password" type="password" class="pl-3" />
            </div>
            <p class="mt-4 mb-5"><a>Забули пароль ?</a></p>
            <button type="submit"><span>Логін</span></button>
        </div>
    </form>
</div>