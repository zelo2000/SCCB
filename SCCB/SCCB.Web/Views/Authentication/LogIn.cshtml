@model SCCB.Web.Models.LogInModel

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

@{
    ViewData["Title"] = "Login";
}

<div class="login-form mt-5 mb-5 pt-5">
    <h2>Залогіньтесь, щоб продовжити</h2>

    <form asp-action="LogIn" method="post" class="mt-5 mb-5">
        <div class="form_stuff">
            <div class="d-flex flex-column mb-3">
                <label asp-for="Email" class="ml-2">Емейл</label>
                <input asp-for="Email" class="pl-3" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>
            <div class="d-flex flex-column mb-3">
                <label asp-for="Password" class="ml-2">Пароль</label>
                <div>
                    <input asp-for="Password" type="password" class="pl-3" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                    <p class="show_pass"> Показати пароль <input type="checkbox" id="showPass" /></p>
                </div>
            </div>
            <p class="my-4"><a>Забули пароль ?</a></p>
            <button type="submit"><span>Логін</span></button>
        </div>
    </form>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function() {

            $("#showPass").change(function() {
                var checked = $(this).is(":checked");           

                if (checked) {
                    $("#Password").attr("type", "text");
                } else {
                    $("#Password").attr("type", "password");
                }
            });

        });
    </script>
}